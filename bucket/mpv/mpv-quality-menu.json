    "license": "GPL-2.0",
    "notes": "Read $dir\\quality-menu.conf and edit settings.conf to configure",
    "depends": "mpv",
    "url": [
        "https://github.com/christoph-heinrich/mpv-quality-menu/releases/download/v4.1.2/quality-menu.lua",
        "https://github.com/christoph-heinrich/mpv-quality-menu/releases/download/v4.1.2/quality-menu.conf"
    ],
    "hash": [
        "15a1afacf5d05520003ead769c83a3dec3785041230601fe35cad5a7440ad3e9",
        "18167acf535b4813165b40044c70d9c9ec205cb4454e1a2e875e005e66d27dcb"
    ],
    "post_install": [
        "$Target = $(appdir mpv $global) + \"\\current\\portable_config\"",
        "Copy-Item -Path $dir\\quality-menu.lua -Destination $Target\\scripts -Force"
    ],
    "uninstaller": {
        "script": [
            "$Target = $(appdir mpv $global) + \"\\current\\portable_config\"",
            "Remove-Item -Path $Target\\scripts\\quality-menu.lua"
        ]
    },
    "checkver": "github",
